<form class="form-horizontal">
   <div class="form-group">
      <label class="control-label col-sm-3">Name:</label>
      <div class="col-sm-3">
         <input type="text"/>
      </div>
   </div>
   <div class="form-group">
      <label class="control-label col-sm-3">Reps:</label>
      <div class="col-sm-3">
         <input type="number"/>
      </div>
   </div>
   <div class="form-group">
      <label class="control-label col-sm-3">Weight:</label>
      <div class="col-sm-3">
         <input type="number"/>
      </div>
   </div>
   <div class="form-group">
      <label class="control-label col-sm-3">Date:</label>
      <div class="col-sm-3">
         <input type="text"/>
      </div>
   </div>
   <div class="form-group">
      <label class="control-label col-sm-3">Units:</label>
      <div class="col-sm-3">
         <select>
            <option val="0">
               kg
            </option>
            <option val="1">
               lbs
            </option>
         </select>
      </div>
   </div>
   <div class="form-group">
      <div class="col-sm-3 col-sm-offset-2">
         <button class="btn btn-submit" type="submit">Submit</button>
      </div>
   </div>
</form>
 
 
   
